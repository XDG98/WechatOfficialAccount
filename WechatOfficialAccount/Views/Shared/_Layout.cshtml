            var modalBodyForm = $('.modal-body form')[0];
            var modalTitle = $('.modal-title')[0];
            var modalBodyId = $('.modal-body input[id="id"]')[0];
            var modalBodyName = $('.modal-body input[id="name"]')[0];
            var modalBodyCount = $('.modal-body input[id="count"]')[0];

            modalContentUrl.value = url;
            modalTitle.textContent = '编辑';
