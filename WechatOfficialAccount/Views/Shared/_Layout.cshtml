        /**
         * 成功提示
         * content：提示内容
         */
        function AlertSuccess(content) {
            DefinedAlert(AlertType.Success, AlertIcon.Success, content);
        }
        /**
         * 失败提示
         * content：提示内容
         */
        function AlertFail(content) {
            DefinedAlert(AlertType.Warning, AlertIcon.Warning, content);
        }
        /**
         * 错误提示
         * content：提示内容
         */
        function AlertError(content) {
            DefinedAlert(AlertType.Danger, AlertIcon.Danger, content);
        }
        /**
         * 自定义提示
         * code：响应状态码
         * content：提示内容
         */
        function Alert(res) {
            switch (res.code) {
                case @HttpStatusCode.OK.GetHashCode():
                    AlertSuccess("操作成功！");
                    break;
                case @HttpStatusCode.BadRequest.GetHashCode():
                    AlertFail(res.message);
                    break;
                case @HttpStatusCode.InternalServerError.GetHashCode():
                    AlertError(res.message);
                    break;
            }
        }
        /**
         * 自定义提示
         * type：提示类型
         * icon：提示图标
         * content：提示内容
         */
        function DefinedAlert(type, icon, content) {
            var myAlert = $('#MyAlert');
            myAlert.addClass("alert alert-" + type + " alert-dismissible fade show");

            var myAlertIcon = myAlert.find("i");
            myAlertIcon.addClass("bi bi-" + icon);
            var myAlertContent = myAlert.find("label");
            myAlertContent.html(content);

            myAlert.show();

            setTimeout(function() {
                myAlert.removeClass();
                myAlertIcon.removeClass();
                myAlertContent.html("");
                myAlert.hide();
            }, @AppSettingsHelper.GetSystemConfig("AlertTime"));
        }

        /**
         * 获取随机数
         * min：最小随机数
         * max：最大随机数
         */
        function generateRandomInteger(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        /**
